<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos en Tiempo Real</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // Conexi칩n al servidor WebSocket
        const socket = io();

        // Escuchar el evento 'updateProducts' que llega del servidor
        socket.on('updateProducts', function(productos) {
            const listaProductos = document.getElementById('productos-lista');
            listaProductos.innerHTML = ''; // Limpiar la lista actual

            // Mostrar cada producto en la lista
            productos.forEach(producto => {
                const item = document.createElement('li');
                item.textContent = `${producto.nombre} - $${producto.precio}`;
                listaProductos.appendChild(item);
            });
        });

        // Funci칩n para agregar un nuevo producto
        function agregarProducto() {
            const nombre = document.getElementById('productoNombre').value;
            const precio = parseFloat(document.getElementById('productoPrecio').value);

            if (nombre && !isNaN(precio)) {
                const nuevoProducto = { nombre, precio };
                socket.emit('addProduct', nuevoProducto);
                document.getElementById('productoNombre').value = '';
                document.getElementById('productoPrecio').value = '';
            }
        }
    </script>
</head>
<body>
    <h1>Productos en Tiempo Real</h1>

    <ul id="productos-lista">
        <!-- Lista de productos se llenar치 din치micamente -->
    </ul>

    <h2>Agregar un producto</h2>
    <input type="text" id="productoNombre" placeholder="Nombre del producto" />
    <input type="number" id="productoPrecio" placeholder="Precio del producto" />
    <button onclick="agregarProducto()">Agregar Producto</button>
</body>
</html>